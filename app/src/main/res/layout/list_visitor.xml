<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/visitorImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainimg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/visitorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="심다은"
            android:fontFamily="@font/minguk"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/visitorGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:text="여성"
                android:fontFamily="@font/minguk"/>
            <TextView
                android:id="@+id/visitorAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:text="(23세)"
                android:fontFamily="@font/minguk"/>
        </LinearLayout>
        <TextView
            android:id="@+id/visitorTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="방문횟수 3 회"
            android:fontFamily="@font/minguk"/>

    </LinearLayout>

</LinearLayout>
