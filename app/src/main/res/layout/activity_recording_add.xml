<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:stateListAnimator="@null"
        android:text="◁"
        android:textSize="25dp"
        android:fontFamily="@font/minguk"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/back"
        android:fontFamily="@font/minguk"
        android:text="녹음"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/line"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="_______________________________________________________"
        android:layout_below="@+id/back"/>

    <ImageView
        android:id="@+id/recordImg"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/recording"
        android:layout_below="@id/line"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/recordButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recordImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="녹음 시작"
        android:fontFamily="@font/minguk"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/recordSaveButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recordButton"
        android:layout_centerHorizontal="true"
        android:text="저장"
        android:fontFamily="@font/minguk"
        android:textSize="25dp"/>
</RelativeLayout>