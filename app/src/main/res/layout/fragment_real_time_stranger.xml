<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RealTimeFragment"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorSecondaryDark"/>

            <ImageView
                android:id="@+id/visitorImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="10dp"
                android:src="@drawable/childman" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textStranger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/minguk"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:text="낯선 사람이 방문했습니다" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/minguk"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:text="성별" />

                <TextView
                    android:id="@+id/textAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/minguk"
                    android:textSize="25dp"
                    android:text="나이" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textKnow"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:fontFamily="@font/minguk"
                        android:text="아는 사람인가요?" />

                    <Button
                        android:id="@+id/buttonPushList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorSecondaryDark"
                        android:textSize="15dp"
                        android:fontFamily="@font/minguk"
                        android:text="리스트 추가" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textEmergency"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:fontFamily="@font/minguk"
                        android:text="긴급 전화가 필요하신가요?" />

                    <Button
                        android:id="@+id/buttonEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorSecondaryDark"
                        android:textSize="15dp"
                        android:fontFamily="@font/minguk"
                        android:text="신고하기" />
                </LinearLayout>
                <Button
                    android:id="@+id/testbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSecondaryDark"
                    android:textSize="15dp"
                    android:fontFamily="@font/minguk"
                    android:text="테스트버튼(누르면 실시간 방문자 정보 알림)" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>